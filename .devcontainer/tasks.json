{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Containers",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/start_docker.sh",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/install_dependencies.sh",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Development Server",
            "type": "npm",
            "script": "dev",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": ["Start Docker Containers", "Install Dependencies"]
        },
        {
            "label": "Run Tests",
            "type": "npm",
            "script": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$tsc", "$jest"]
        },
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}